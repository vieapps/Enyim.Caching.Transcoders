<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<RootNamespace>Enyim</RootNamespace>
		<WarningLevel>3</WarningLevel>
		<AssemblyName>Enyim.Caching.Transcoders</AssemblyName>
		<AssemblyTitle>Enyim Memcached Transcoders</AssemblyTitle>
		<SignAssembly>$(Sign)</SignAssembly>
		<DefineConstants>$(SignConstant)</DefineConstants>
		<AssemblyOriginatorKeyFile>../VIEApps.Components.snk</AssemblyOriginatorKeyFile>
		<AssemblyVersion>1.7$(ReleaseVersion)</AssemblyVersion>
		<FileVersion>1.7$(ReleaseVersion)</FileVersion>
		<InformationalVersion>1.7-$(TargetFramework)-$(ReleaseRevision)</InformationalVersion>
		<Version>1.7$(ReleaseVersion)$(ReleaseSurfix)</Version>
		<Product>Enyim Memcached</Product>
		<Title>Enyim Memcached Transcoders</Title>
		<Description>The custom transcoders for VIEApps Enyim Caching (Protocol Buffers, Json.NET Bson, MessagePack)</Description>
		<Copyright>© 2010 Attila Kiskó, © 2012 Yoshifumi Kawai, © 2019 VIEApps.net</Copyright>
		<Authors>VIEApps.net</Authors>
		<Company>VIEApps.net</Company>
		<GeneratePackageOnBuild>$(GeneratePackage)</GeneratePackageOnBuild>
		<PackageId>VIEApps.Enyim.Caching.Transcoders$(PackageSurfix)</PackageId>
		<PackageLicense>LICENSE.md</PackageLicense>
		<PackageOutputPath>..\</PackageOutputPath>
		<PackageTags>cache;caching;distributed;distributedcache;memcached;enyim;enyimmemcached;enyim.memcached;enyim.caching;vieapps;vieapps.components</PackageTags>
		<PackageReleaseNotes>Support .NET Standard 2.1</PackageReleaseNotes>
		<PackageProjectUrl>https://vieapps.net/</PackageProjectUrl>
		<PackageIconUrl>https://github.com/vieapps/Components.Utility/raw/master/logo.png</PackageIconUrl>
		<RepositoryUrl>https://github.com/vieapps/Enyim.Caching.Transcoders</RepositoryUrl>
	</PropertyGroup>

	<ItemGroup>
		<None Remove=".DS_Store" />
		<None Remove=".gitattributes" />
		<None Remove=".gitignore" />
		<None Remove="LICENSE.md" />
		<None Remove="README.md" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="MsgPack.Cli" Version="1.0.1" />
		<PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
		<PackageReference Include="Newtonsoft.Json.Bson" Version="1.0.2" />
		<PackageReference Include="VIEApps.Enyim.Caching$(PackageSurfix)" Version="1.7.1907.1-preview" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
		<PackageReference Include="protobuf-net" Version="2.4.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
		<PackageReference Include="protobuf-net" Version="3.0.0-alpha.43" />
	</ItemGroup>

</Project>